{ 
   "variables": {
        "ssh_name"          : "miguel",
        "ssh_pass"          : "lixo",
        "hostname"          : "ubuntu64-server-12-04-5",
        "presseed"          : "ubuntu64-server-12-04-5.cfg",
        "build_name"        : "ubuntu-12.04-5",
        "aws_access"        : "",
        "aws_key"           : "",
        "IP_ADDRESS"        : "",
        "product"           : "",
        "env"               : "",
        "role"              : "",
        "password"          : "",
        "region"            : "eu-west-1",
        "source_ami"        : "ami-f0b11187",
        "subnet_id"         : "subnet-cb8a7892",
        "vpc_id"            : "vpc-9ff330fa"
    },

    "builders": [
        {
          "type"                        : "amazon-ebs",
          "access_key"                  : "{{ user `aws_access` }}",
          "secret_key"                  : "{{ user `aws_key` }}",
          "instance_type"               : "t2.micro",
          "ssh_username"                : "ubuntu",
          "ami_name"                    : "{{ user `build_name`}}",
          "associate_public_ip_address" : true,
          "ssh_timeout"                 : "20m",
          "ami_description"             : "My Description" ,
          "tags"                        : {
              "Name" : "{{ user `build_name` }}"
          },
          "region"                      : "{{ user `region`}}",
          "source_ami"                  : "{{ user `source_ami`}}",
          "subnet_id"                   : "{{ user `subnet_id`}}",
          "vpc_id"                      : "{{ user `vpc_id`}}",
        }
        ],

        "provisioners": [
           {
             "type": "file",
             "source": "provisioners/files/mount-ephemeral.sh",
             "destination": "mount-ephemeral"
           },
          {
            "type"          : "shell",
            "inline"        : [
              "sudo apt-add-repository 'deb http://ops-nexus.bgchtest.info:8081/content/repositories/releases stable main' >>/var/tmp/footman.log",
              "sudo apt-get update",
              "sudo apt-get install --force-yes -y bgch-bootstrap >>/var/tmp/footman.log 2>&1",
              "sudo -i /usr/lib/bgch/bootstrap/bootstrapper.sh -p {{user `password`}} {{user `product`}}:{{user `env`}}:{{user `role`}} >>/var/tmp/footman.log 2>&1",
              ]
          }
       ]
}
