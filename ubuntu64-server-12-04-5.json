{ 
   "variables": {
        "ssh_name"   : "miguel",
        "ssh_pass"   : "lixo",
        "hostname"   : "ubuntu64-server-12-04-5",
        "presseed"   : "ubuntu64-server-12-04-5.cfg",
        "build_name" : "ubuntu-12.04-5",
        "aws_access" : "",
        "aws_key"    : ""
    },

    "builders": [
        {
        "type"         : "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",
        "name"         : "{{ user `build_name`}}",
        "vboxmanage"   : [
            ["modifyvm", "{{.Name}}", "--vram", "32"]
        ],

        "disk_size"    : 10000,

        "iso_url"      : "http://releases.ubuntu.com/precise/ubuntu-12.04.5-server-amd64.iso",
        "iso_checksum" : "769474248a3897f4865817446f9a4a53",
        "iso_checksum_type": "md5",

        "http_directory" : "{{ pwd }}",
        "http_port_min" : 9001,
        "http_port_max" : 9001,

        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_wait_timeout": "20m",

        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",

        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `presseed` }} ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- <enter>"
        ]
        },
        {
          "type"            : "amazon-ebs",
          "access_key"      : "{{ user `aws_access` }}",
          "secret_key"      : "{{ user `aws_key` }}",
          "instance_type"   : "t2.micro",
          "ssh_username"    : "ubuntu",
          "ami_name"        : "{{ user `build_name`}}",
          "associate_public_ip_address" : true, 
          "ssh_timeout"     : "20m",
          "ami_description" : "My Description" ,
          "tags"            : {
              "name" : "{{ user `build_name` }}"
          },
          "region"          : "eu-west-1",
          "source_ami"      : "ami-f0b11187",
          "subnet_id"       : "subnet-cb8a7892",
          "vpc_id"          : "vpc-9ff330fa"
        }
        ],

        "provisioners": [
          {
            "type": "shell",
            "inline": [
              "sleep 30",
              "sudo apt-get update",
              "sudo apt-get install -y git puppet "
            ]
          }
       ]
}
